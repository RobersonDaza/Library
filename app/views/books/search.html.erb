<h1>All Books</h1>
<%= link_to 'sign_out', new_user_session_path %>
<%= link_to 'new_book', new_book_path %>


<%= form_tag books_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search"%>
  </p>
<% end %>


<table>
  <tr>
    <th>Books</th>
  </tr>

  <% @book.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= link_to 'see book', book_path(book) %></td>
      <td><%= link_to 'delete', book_path(book),
             method: :delete,
             data: {confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Back', new_user_session_path %>
